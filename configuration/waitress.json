{
    "logs": {
        "limit": 64
    },
    "database": {
        "string": "mongodb://localhost/waitress"
    },
    "ports": {
        "server": 2005,
        "bases": {
            "public": 3000
        },
        "steps": {
            "latest": 5,
            "repository": 10,
            "github": 3000
        }
    },
    "directories": {
        "waitress": "/var/www/waitress",
        "repositories": "/var/www/waitress-repositories",
        "nginx": {
            "configurations": "/etc/nginx/conf.d"
        }
    },
    "templates": {
        "fedora": {
            "rebootScript": "back/templates/fedora/start-on-reboot.sh"
        },
        "nginx": {
            "waitress": "back/templates/nginx/waitress",
            "repository": "back/templates/nginx/repository"
        }
    },
    "files": {
        "logs": {
            "json": "logs/server.json"
        },
        "nginx": {
            "configuration": "/etc/nginx/nginx.conf"
        },
        "fedora": {
            "rebootScript": "back/shell/fedora/start-on-reboot.sh"
        }
    },
    "characters": {
        "separators": {
            "repository": {
                "replaced": "+",
                "replacer": " "
            }
        }
    }
}